<div class="container">
    <div class="row">
        <h1 class="h1-center">Edit <%= title.name %></h1>

        <div class="header-width-30">
            <!--                              method-override          -->
            <form action="/titles/<%= title._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text"
                           name="title[name]" value="<%= title.name %>">
                </div>

                <div class="form-group">
                    <input class="form-control" type="number" name="title[cost]"
                           value="<%= title.cost %>" min="0.01" step="0.01">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text"
                           name="title[image]" value="<%= title.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text"
                           name="title[description]" value="<%= title.description %>">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>

            <a href="/titles">Go Back</a>
        </div>

    </div>
</div>



