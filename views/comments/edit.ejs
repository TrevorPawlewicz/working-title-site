<h1>Comments - edit.ejs</h1>

<div id="comments-new" class="container">
    <div class="row">
        <h1 class="h1-center">Edit Comment</h1>

        <div class="header-width-30">
            <form action="/titles/<%= title_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">

                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit Comment</button>
                </div>

            </form>

            <a href="/titles">Go Back</a>
        </div>

    </div>
</div>



